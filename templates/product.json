{
  "sections": {
    "main": {
      "type": "main-product",
      "blocks": {
        "vendor": {
          "type": "text",
          "settings": {
            "text": "{{ product.vendor }}",
            "text_style": "uppercase"
          }
        },
        "title": {
          "type": "title",
          "settings": {
          }
        },
        "price": {
          "type": "price",
          "settings": {
          }
        },
        "variant_picker": {
          "type": "variant_picker",
          "settings": {
            "picker_type": "button",
            "swatch_shape": "circle"
          }
        },
        "340cde47-c314-41db-a3ec-31934bc4bcde": {
          "type": "popup",
          "settings": {
            "text": "See Size Chart",
            "page": "{{ product.metafields.custom.size_chart.value.page.value }}"
          }
        },
        "quantity_selector": {
          "type": "quantity_selector",
          "settings": {
          }
        },
        "buy_buttons": {
          "type": "buy_buttons",
          "settings": {
            "show_dynamic_checkout": true,
            "show_gift_card_recipient": false
          }
        },
        "icon_with_text_DMTty7": {
          "type": "icon-with-text",
          "settings": {
            "layout": "horizontal",
            "icon_1": "heart",
            "heading_1": "100% Premium Cotton",
            "icon_2": "return",
            "heading_2": "Hi-Tech Printed Safe Dyes",
            "icon_3": "truck",
            "heading_3": "Luxuriously Soft  Bio-Wash"
          }
        },
        "description": {
          "type": "description",
          "settings": {
          }
        },
        "collapsible_tab_N3JtdN": {
          "type": "collapsible_tab",
          "settings": {
            "heading": "About This Design",
            "icon": "none",
            "content": "{{ product.metafields.custom.about_design | metafield_tag }}",
            "page": ""
          }
        },
        "share": {
          "type": "share",
          "settings": {
            "share_label": "Share"
          }
        },
        "complementary_NEAaMy": {
          "type": "complementary",
          "settings": {
            "block_heading": "Pairs well with",
            "make_collapsible_row": false,
            "icon": "price_tag",
            "product_list_limit": 10,
            "products_per_page": 3,
            "pagination_style": "counter",
            "image_ratio": "square",
            "enable_quick_add": true
          }
        }
      },
      "block_order": [
        "vendor",
        "title",
        "price",
        "variant_picker",
        "340cde47-c314-41db-a3ec-31934bc4bcde",
        "quantity_selector",
        "buy_buttons",
        "icon_with_text_DMTty7",
        "description",
        "collapsible_tab_N3JtdN",
        "share",
        "complementary_NEAaMy"
      ],
      "settings": {
        "enable_sticky_info": true,
        "color_scheme": "",
        "media_size": "large",
        "constrain_to_viewport": true,
        "media_fit": "contain",
        "gallery_layout": "stacked",
        "media_position": "left",
        "image_zoom": "lightbox",
        "mobile_thumbnails": "hide",
        "hide_variants": true,
        "enable_video_looping": false,
        "padding_top": 36,
        "padding_bottom": 12
      }
    },
    "related-products": {
      "type": "related-products",
      "settings": {
        "heading": "You may also like",
        "heading_size": "h2",
        "products_to_show": 4,
        "columns_desktop": 4,
        "color_scheme": "background-1",
        "image_ratio": "square",
        "image_shape": "default",
        "show_secondary_image": true,
        "show_vendor": false,
        "show_rating": false,
        "columns_mobile": "2",
        "padding_top": 36,
        "padding_bottom": 28
      }
    }
  },
  "order": [
    "main",
    "related-products"
  ]
}
